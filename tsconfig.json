{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ES2024",
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true,
        "noEmit": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "$": ["public/base/script.tsx"],
            "SUG": ["public/base/SUG.tsx"],

            "&": ["public/content/&.tsx"],
            "&dashboard": ["public/content/&dashboard.tsx"],
            "&error": ["public/content/&error.tsx"],
            "&playground": ["public/content/&playground.tsx"],

            "#dicebear": ["public/app/dicebear.tsx"],
            "#mathsys": ["public/app/mathsys.tsx"],
            "#popup": ["public/app/popup.tsx"],

            "ß": ["public/components/ß.tsx"],
            "ßButton": ["public/components/Button.tsx"],
            "ßForm": ["public/components/Form.tsx"],
            "ßInputEmail": ["public/components/InputEmail.tsx"],
            "ßInputPassword": ["public/components/InputPassword.tsx"],
            "ßInputText": ["public/components/InputText.tsx"],
            "ßSuspense": ["public/components/Suspense.tsx"],
            "ßSVGIcon": ["public/components/SVGIcon.tsx"]
        }
    },
    "exclude": [
        "node_modules/",
    ]
}