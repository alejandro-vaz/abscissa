{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2024",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "ß": ["public/ß.tsx"],

      "&": ["public/content/&.tsx"],
      "&error": ["public/content/&error.tsx"],
      "&playground": ["public/content/&playground.tsx"],
      "&features": ["public/content/&features.tsx"],

      "#dicebear": ["public/app/dicebear.tsx"],
      "#mathsys": ["public/app/mathsys.tsx"]
    }
  },
  "exclude": ["node_modules/"]
}
